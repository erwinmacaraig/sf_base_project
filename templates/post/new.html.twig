{% extends 'base.html.twig' %}
{% block body %}
	<div class="my-14">
		<h1 class="text-6xl">New Blog Post</h1>
		<div class="w-full">			
			{{ form_start(form, {'attr': {'class': 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4'}}) }}
				<div class="mb-6">					
					{{form_label(form.title, 'Post title', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}})}}
					{{ form_widget(form.title, {'attr': {'class': 'shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-2 leading-tight focus:outline-none focus:shadow-outline', 'value': '', 'placeholder': 'Write Post Title Here'}})}}
					<p class="text-red-500 text-xs italic">{{form_errors(form.title)}}</p>
				</div>
				<div class="mb-6">
					
					{{form_label(form.content, 'Post content', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}})}}
					{{ form_widget(form.content, {'attr': {
						'class': 'rop-shadow-lg w-full h-60 p-4 border border-red-500 focus:outline-none focus:shadow-outline',
						'placeholder': 'Content goes here...'
					}}) }}
					
					<p class="text-red-500 text-xs italic">{{form_errors(form.content)}} </p>
				</div>
				
				{{ form_widget(form.save, {'attr': {'class': 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer'}})}}
			
			{{form_end(form)}}
		</div>
	</div>
{% endblock %}
